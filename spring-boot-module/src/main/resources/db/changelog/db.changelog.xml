<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="1" author="ilya6697089@mail.ru">
        <createTable tableName="Item">
            <column name="item_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(40)"/>
            <column name="description" type="varchar(40)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="ilya6697089@mail.ru">
        <createTable tableName="ItemDetails">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true"
                             nullable="false"
                             foreignKeyName="fk_1_to_1"
                             references="Item(item_id)"/>
            </column>
            <column name="price" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="3" author="ilya6697089@mail.ru">
        <createTable tableName="Shop">
            <column name="shop_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(40)"/>
            <column name="location" type="varchar(40)"/>
        </createTable>
    </changeSet>

    <changeSet id="4" author="ilya6697089@mail.ru">
        <createTable tableName="Shop_Item">
            <column name="shop_id" type="BIGINT">
                <constraints primaryKey="true"
                             nullable="false"
                             foreignKeyName="fk_1"
                             references="Shop(shop_id)"/>
            </column>
            <column name="item_id" type="BIGINT">
                <constraints primaryKey="true"
                             nullable="false"
                             foreignKeyName="fk_2"
                             references="Item(item_id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>